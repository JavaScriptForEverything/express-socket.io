extends layout/index

block header
	div(class='mx-4 border mb-2 border-blue-500')
		div#header(class='h-20')


block middle
	div(class='flex-1 mx-4 border border-blue-500')
		header(class='p-2 bg-blue-100 text-blue-700 ') 
			p you have connected with (id): 
				span#id-span 

		article#message-container(class='px-2')


block footer
	div(class='mx-4 py-2 flex gap-1')
		div(class='flex flex-col justify-around')
				label(for='message-input' class='text-blue-700 block') Message
				label(for='room-id-input' class='text-blue-700 block') Room

		div(class='flex-1')
			input(id='message-input' type='text' placeholder='type your message'
				class='flex-1 w-full text-blue-600 rounded border border-blue-300 px-2 py-1'
				class='outline-none focus:border-blue-400'
			)
			input(id='room-id-input' type='text' placeholder='type your message'
				class='flex-1 w-full text-blue-600 rounded border border-blue-300 px-2 py-1'
				class='outline-none focus:border-blue-400'
			)

		div(class='')
			button(type='button' id='send-button'
				class='w-full text-blue-600/95 border border-blue-300 px-2 py-1 rounded'
				class='hover:text-blue-600 hover:border-blue-400 active:bg-blue-50 active:border-blue-500'
			) Send
			button(type='button' id='join-button'
				class='w-full text-blue-600/95 border border-blue-300 px-2 py-1 rounded'
				class='hover:text-blue-600 hover:border-blue-400 active:bg-blue-50 active:border-blue-500'
			) Join

